<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="अभ्यास का प्रकार चुनें\nChoose Practice Type"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_spelling_practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="वर्तनी अभ्यास\nSpelling Practice"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_pronunciation_practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="उच्चारण अभ्यास\nPronunciation Practice" />

</LinearLayout>