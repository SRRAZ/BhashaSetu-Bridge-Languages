<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom attributes for the HindiTextView -->
    <declare-styleable name="HindiTextView">
        <attr name="hindiTextSize" format="enum">
            <enum name="small" value="0" />
            <enum name="medium" value="1" />
            <enum name="large" value="2" />
            <enum name="header" value="3" />
            <enum name="title" value="4" />
        </attr>
    </declare-styleable>
    
    <!-- Custom attributes for the BilingualTextView -->
    <declare-styleable name="BilingualTextView">
        <attr name="englishText" format="string" />
        <attr name="hindiText" format="string" />
        <attr name="textStyle" format="enum">
            <enum name="small" value="0" />
            <enum name="medium" value="1" />
            <enum name="large" value="2" />
            <enum name="header" value="3" />
            <enum name="title" value="4" />
        </attr>
    </declare-styleable>
    
    <!-- Custom attributes for the AudioPronunciationView -->
    <declare-styleable name="AudioPronunciationView">
        <attr name="pronunciationLabel" format="string" />
        <attr name="wordText" format="string" />
        <attr name="wordId" format="integer" />
        <attr name="language" format="string" />
    </declare-styleable>
    
    <!--  Custom attributes for WordImageView  -->
    <declare-styleable name="WordImageView">
        <attr name="imageUrl" format="string"/>
        <attr name="captionText" format="string"/>
    </declare-styleable>
    
    <!--  Attributes for XpTrackerView  -->
    <declare-styleable name="XpTrackerView">
        <attr name="xpTracker_progressColor" format="color"/>
        <attr name="xpTracker_backgroundColor" format="color"/>
        <attr name="xpTracker_textColor" format="color"/>
        <attr name="xpTracker_levelBackgroundColor" format="color"/>
    </declare-styleable>
    
    <!--  Attributes for SkillProgressView  -->
    <declare-styleable name="SkillProgressView">
        <attr name="skillProgressColor" format="color"/>
        <attr name="skillBackgroundColor" format="color"/>
        <attr name="skillTextColor" format="color"/>
        <attr name="skillName" format="string"/>
        <attr name="skill_strokeWidth" format="dimension"/>
    </declare-styleable>
    
    <!--  Attributes for StarburstView  -->
    <declare-styleable name="StarburstView">
        <attr name="rayCount" format="integer"/>
        <attr name="rayColor" format="color"/>
    </declare-styleable>

    <!-- OfflineStatusView Attributes -->
    <declare-styleable name="OfflineStatusView">
        <attr name="offlineStatus_textColor" format="color" />
        <attr name="offlineStatus_backgroundColor" format="color" />
        <attr name="offlineStatus_iconBackgroundColor" format="color" />
        <attr name="offlineStatus_iconSize" format="dimension" />
        <attr name="offlineStatus_iconPadding" format="dimension" />
        <attr name="offlineStatus_cornerRadius" format="dimension" />
        <attr name="offlineStatus_onlineText" format="string" />
        <attr name="offlineStatus_offlineText" format="string" />
        <attr name="offlineStatus_wifiText" format="string" />
        <attr name="offlineStatus_cellularText" format="string" />
        <attr name="offlineStatus_meteredText" format="string" />
    </declare-styleable>
    
    <!-- LoadingStateView Attributes -->
    <declare-styleable name="LoadingStateView">
        <attr name="loadingMessage" format="string" />
        <attr name="errorMessage" format="string" />
        <attr name="emptyMessage" format="string" />
        <attr name="showLoadingIndicator" format="boolean" />
        <attr name="showRetryButton" format="boolean" />
    </declare-styleable>
    
    <!-- LoadingButton Attributes -->
    <declare-styleable name="LoadingButton">
        <attr name="loadingButton_text" format="string" />
        <attr name="loadingButton_loadingText" format="string" />
        <attr name="loadingButton_textColor" format="color" />
        <attr name="loadingButton_loadingTextColor" format="color" />
        <attr name="loadingButton_progressColor" format="color" />
        <attr name="loadingButton_autoResetDelayMs" format="integer" />
    </declare-styleable>
    
    <!-- ProgressAnimationView Attributes -->
    <declare-styleable name="ProgressAnimationView">
        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="progress_strokeWidth" format="dimension" />
        <attr name="indeterminate" format="boolean" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>
</resources>