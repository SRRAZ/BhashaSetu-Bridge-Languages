<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/customize_difficulty"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/customize_difficulty_description"
                android:textAlignment="center"
                android:textColor="@color/text_secondary" />

            <!-- Vocabulary Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/vocabulary"
                android:textColor="@color/skill_vocabulary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_vocabulary_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                tools:text="Intermediate (Level 3)" />

            <SeekBar
                android:id="@+id/seek_vocabulary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="4"
                android:progressTint="@color/skill_vocabulary"
                android:thumbTint="@color/skill_vocabulary"
                tools:progress="2" />

            <!-- Pronunciation Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/pronunciation"
                android:textColor="@color/skill_pronunciation"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pronunciation_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                tools:text="Elementary (Level 2)" />

            <SeekBar
                android:id="@+id/seek_pronunciation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="4"
                android:progressTint="@color/skill_pronunciation"
                android:thumbTint="@color/skill_pronunciation"
                tools:progress="1" />

            <!-- Grammar Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/grammar"
                android:textColor="@color/skill_grammar"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_grammar_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                tools:text="Beginner (Level 1)" />

            <SeekBar
                android:id="@+id/seek_grammar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="4"
                android:progressTint="@color/skill_grammar"
                android:thumbTint="@color/skill_grammar"
                tools:progress="0" />

            <!-- Listening Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/listening"
                android:textColor="@color/skill_listening"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_listening_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                tools:text="Intermediate (Level 3)" />

            <SeekBar
                android:id="@+id/seek_listening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="4"
                android:progressTint="@color/skill_listening"
                android:thumbTint="@color/skill_listening"
                tools:progress="2" />

            <!-- Reading Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/reading"
                android:textColor="@color/skill_reading"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reading_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                tools:text="Elementary (Level 2)" />

            <SeekBar
                android:id="@+id/seek_reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="4"
                android:progressTint="@color/skill_reading"
                android:thumbTint="@color/skill_reading"
                tools:progress="1" />

            <!-- Writing Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/writing"
                android:textColor="@color/skill_writing"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_writing_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                tools:text="Beginner (Level 1)" />

            <SeekBar
                android:id="@+id/seek_writing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="4"
                android:progressTint="@color/skill_writing"
                android:thumbTint="@color/skill_writing"
                tools:progress="0" />

            <!-- Game Difficulty -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/games"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_games_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                tools:text="Intermediate (Level 3)" />

            <SeekBar
                android:id="@+id/seek_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="4"
                android:progressTint="@color/accent"
                android:thumbTint="@color/accent"
                tools:progress="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/difficulty_note"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="italic" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_outline"
                    android:text="@string/reset"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary"
                    android:text="@string/save"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>